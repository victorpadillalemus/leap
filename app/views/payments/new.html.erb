      <div align = "center" class = "centereddiv">
        <div align = "center" id = "box">
          <label class = "switch">
            <input type = "checkbox">
            <div class = "slider round"></div>
        </div>
      </div>
    <hr>
    <div>Your leap starts at: <%= @experience.start_time %>:00</div>
    <div>We'll take you back to the airport for your flight at: <%= @experience.end_time %>:00</div>
    <%= form_tag booking_payments_path(@booking) do %>
    <article>
      <label class="amount">
        <span>Amount: <%= humanized_money_with_symbol(@booking.amount) %></span>
      </label>
    </article>
    <div class="grow"></div>

    <br>
      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-name="<%= @experience.title %>"
        data-email="<%= current_user.email %>"
        data-amount= "<%= @booking.amount_cents %>"
        data-currency="<%= @experience.price_currency %>"></script>
