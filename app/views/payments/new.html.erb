<div class="purchase-container">
  <h1>Purchase of Experience</h1>
  <%= form_tag booking_payments_path(@booking) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@booking.total_price) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My Experience"
    data-email="<%= current_user.email %>"
    data-amount="<%= @experience.price_cents %>"
    data-currency="<%= @experience.price.currency %>"></script>
  <% end %>



</div>
