<div class="experiences-header">
  <h4>See all Experiences</h4>
  <h6><%= %></h6>
</div>

<div class="experiences-subheader">
  <h6>Categories</h6>
</div>

<div class="horizontal-scrolling-card-container">
  <%= link_to experiences_path(search: @search_params.dup.merge!({category: "Gastronomy"})) do  %>
    <div class="card-small" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('paella3.jpg') %>);">Gastronomy
    </div>
  <% end %>

  <%= link_to experiences_path(search: @search_params.dup.merge!({category: "Romantic"})) do  %>
    <div class="card-small" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('romantic.jpg') %>);">Romantic
    </div>
    <% end %>


    <%= link_to experiences_path(search: @search_params.dup.merge!({category: "Family"})) do  %>
    <div class="card-small" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('family.jpg') %>);">Family
    </div>
    <% end %>

  <%= link_to experiences_path(search: @search_params.dup.merge!({category: "Cultural"})) do  %>
    <div class="card-small" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('cultural.jpg') %>);">Cultural
    </div>
  <% end %>

  <%= link_to experiences_path(search: @search_params.dup.merge!({category: "Nightlife"})) do  %>
    <div class="card-small" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('nightlife.jpg') %>);">Nightlife
    </div>
    <% end %>
</div>

<div class="experiences-subheader">
  <h6>Top ranked</h6>
</div>

<div class="vertical-scrolling-card-container">
  <% @experiences.each do |e| %>
    <div class="card-big">
      <div class="card-image">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% if e.experience_photos.present? %>
              <% e.experience_photos.each_with_index do |p, index| %>
                <div class="carousel-item <%= 'active' if index == 0  %>">
                  <img class="d-block w-100" src="<%= cl_image_path p.photo %>" alt="img-<%= index %> ">
                </div>
              <% end %>
            <% end %>
          </div>

          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <div class="card-caption">
        <div class="card-caption-top">
          <div class="link-show"><%= link_to e.title, e %></div>
          <div><%= humanized_money_with_symbol(e.price) %></div>
        </div>
        <div class="card-caption-middle">
          <div class="small-margin-bottom"><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i> 5.0 </div>
        </div>
        <div class="card-caption-bottom">
          <div class="small-margin-right"><i class="fas fa-users"></i><%= e.capacity %></div>
          <div><i class="fas fa-history"></i><%= e.duration %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>
