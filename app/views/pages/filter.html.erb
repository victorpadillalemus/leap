<div class="page-container">
  <div class="filter-container">
    <h2>Date</h2>
    <div class="wrap">
      <%= simple_form_for :search, url: experiences_path, method: :get do |f| %>
        <%= f.input :transit_date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <div class= "slider-container">
            <div class="slider-1">
              <h3>Arrival</h3>
              <input type="range" min="1" max="100" value="50" class="slider" id="myRange" name="search[arrival]">
             </div>

               <%= f.input :arrive, label: false %>
             <div class="slider-2">

              <h3>Departure</h3>
              <input type="range" min="1" max="100" value="50" class="slider" id="myRange2" name="search[departure]">
             </div>
               <%= f.input :depart, label: false %>
             </div>
        </div>

    <div class="passenger-counter">
      <div class="passanger-counter-header">
        <h3>Passengers</h3>
      </div>
      <div class="passanger-counter-selectors">
        <span class="minus">-</span>

        <input type="text" value="1" class="my-auto" name="search[quantity]"/>
        <span class="plus">+</span>
        </div>
    </div>
  </div>
      <div class="search-button">
        <input type="hidden" value="<%= params[:home_search][:airport] %>" name="search[airport]">

        <%= f.submit "Search", class: "primary-button" %>
      </div>
   <% end %>
</div>

