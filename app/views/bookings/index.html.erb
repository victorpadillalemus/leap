<div class="reviews">
  <% if @booking.present? %>
  <% @booking.reviews.each do |review| %>
  <%= render 'reviews/show', review: review %>
  <% end %>
  <% else %>
  Would you like to leave a review for your booking?
  <% end %>
  <%= link_to 'Add Review', new_booking_review_path(@booking) %>
</div>
